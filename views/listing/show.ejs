<% layout("/layouts/boilerplate.ejs")  %> 
<body>
    <div class="row mt-3">
        <div class="col-8 offset-3"> 
            <h3>Listing details:</h3>

       </div>
   
    <div class="card col-6 offset-3">
        <div class="card col-6 show-card" style="width: 18rem;">
            <img src="<%=listing.image%>" class="card-img-top show-img" alt="listing_image">
            <div class="card-body">
              <p class="card-text"><b><%=listing.title%></b><br>
                <%=listing.description%><br>
                 &#8377;<%=listing.price.toLocaleString("en-IN")%><br>
                 <%=listing.location%><br>
                 <%=listing.country%>
            </p>
            </div>
          </div>
    </div>
   
      
     </div>
      <div class="btns">
         <form method="get" action="/listing/<%=listing.id%>/edit">
        <button class="btn offset-3 edit-btn " >edit</button>
      </form>
    
  
    <form method="post" action="/listing/<%=listing.id%>?_method=DELETE">
       <button class="btn btn-dark offset-5">delete</button>
      </form>
   </div>
    
</body>
