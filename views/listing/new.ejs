<% layout("layouts/boilerplate.ejs")  %> 
<body>
   
    <div class="row mt-3">
        <div class="col-8 offset-2 ">
          <br>
             <h3>Create new listing</h3>

        
    <form method="post" action="/listing" novalidate  class="needs-validation">
          <ul>
            <div class="mb-3">
                <label  for="title" class="form-label">Tittle</label>
                 <input name="listing[title]" placeholder="title" type="text" class="form-control" required>
                 <div class="invalid-feedback">Please enter a title</div>
            </div>
       <div class="mb-3">
           <label for="des" class="form-label">Description</label>
            <textarea name="listing[des]" placeholder="des" type="text" class="form-control" required></textarea>
            <div class="invalid-feedback">Please enter description</div>
          </div>
       <div class="mb-3">
        <label for="image" class="form-label">image link</label>
         <input  name="listing[image]" placeholder="enter image URL" class="form-control">
       </div>
       <div class="row">
        <div class="mb-3 col-md-4">
        <label for="price" class="form-label">price</label>
       <input name="listing[price]" placeholder=1200  class="form-control" required>
       <div class="invalid-feedback">Please enter price</div>
       </div>
        <div class="mb-3 col-md-8" >
        <label for="country" class="form-label">country</label> 
              <input name="listing[country]" placeholder="India" type="text" class="form-control" required>
      <div class="invalid-feedback">Please enter country</div>
            </div>
           
       </div>
       
       <div class="mb-3"> 
        <label for="location" class="form-label">location</label> 
        <input name="listing[location]" placeholder="Ranchi,Jharkhand" type="text" class="form-control" required>
        <div class="invalid-feedback">Please enter a location</div>
       </div>
       <br>
       <button class="btn btn-dark add-btn mt-3">Add</button>
       <br>
  
     
  
    </ul>
   
    </form>
</div>
  </div>
</body>
